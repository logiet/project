<!DOCTYPE html>
<html lang="en">
  <%-include("layouts/header");-%>
  <body>
    <%-include("layouts/navbar");-%>
    <!-- Page Header-->
    <header
      class="masthead"
      style="background-image: url('/assets/img/logo.png')"
    >
      <div class="overlay"></div>
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-md-10 mx-auto">
            <div class="post-heading">
              <h1>History of Simulations</h1>
              <h2 class="subheading">
                Easy way of comparing 2 different builds and seeing previous
                simulations.
              </h2>
            </div>
          </div>
        </div>
      </div>
    </header>
    <!-- Post Content-->
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <% for (var i = unitamts.length-1; i >= 0; i--) { %>
          <div class="post-preview">
            <a href="/post/<%= unitamts[i]._id%>">
              <h4><%= "Assaults: " + unitamts[i].As %></h4>
              <h4><%= "Supports: " + unitamts[i].Sup %></h4>
              <h4><%= "Suicides: " + unitamts[i].Sui %></h4>
              <h4><%= "Medics: " + unitamts[i].Med %></h4>
            </a>
          </div>
          <hr />
          <% } %>
          <hr />
          <%-include("layouts/footer")-%>
        </div>
      </div>
    </div>
    <!-- Bootstrap core JS-->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    <script src="/js/scripts.js"></script>
  </body>
</html>
