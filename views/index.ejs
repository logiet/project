<!DOCTYPE html>
<html lang="en">
  <%-include("layouts/header");-%>
  <body>
    <%-include("layouts/navbar");-%>
    <!-- Page Header-->
    <header
      class="masthead"
      style="background-image: url('/assets/img/logo.png')"
    >
      <div class="overlay"></div>
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-md-10 mx-auto">
            <div class="site-heading">
              <h1>BattleSim</h1>
              <span class="subheading">A WebApp for School</span>
            </div>
          </div>
        </div>
      </div>
    </header>
    <!-- Main Content-->
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <form
            action="/posts/store"
            method="POST"
            id="contactForm"
            name="sentMessage"
            novalidate
          >
            <div class="control-group">
              <div class="form-group controls">
                <label>Assaults:</label>
                <input
                  class="form-control"
                  id="As"
                  type="number"
                  name="As"
                  value="0"
                />
              </div>
            </div>
            <div class="control-group">
              <div class="form-group controls">
                <label>Supports:</label>
                <input
                  class="form-control"
                  id="Sup"
                  type="number"
                  name="Sup"
                  value="0"
                />
              </div>
            </div>
            <div class="control-group">
              <div class="form-group controls">
                <label>Suicides:</label>
                <input
                  class="form-control"
                  id="Sui"
                  type="number"
                  name="Sui"
                  value="0"
                />
              </div>
            </div>
            <div class="control-group">
              <div class="form-group controls">
                <label>Medics:</label>
                <input
                  class="form-control"
                  id="Med"
                  type="number"
                  name="Med"
                  value="0"
                />
              </div>
            </div>
            <br />
            <div id="success"></div>
            <button
              class="btn btn-primary"
              id="sendMessageButton"
              type="submit"
            >
              Submit
            </button>
          </form>
        </div>
      </div>
    </div>
    <hr />
    <%-include("layouts/footer")-%>
    <!-- Bootstrap core JS-->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    <script src="/js/scripts.js"></script>
  </body>
</html>
